<html>
<head>
  <title>Create Poll</title>
  <style>
    .option-field {
      margin-bottom: 5px;
      display: flex;
      align-items: center;
    }
    .option-field input {
      margin-right: 10px;
    }
    .remove-option-btn {
      cursor: pointer;
      background: #e74c3c;
      color: #fff;
      border: none;
      padding: 3px 8px;
      border-radius: 3px;
      margin-left: 5px;
    }
    #add-option-btn {
      margin-top: 10px;
      background: #2ecc71;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Create Poll</h1>
  <form method="POST" action="/create">
    <div>
      <label>Title: <input name="title" type="text" required /></label>
    </div>

    <div id="options-container">
      <div class="option-field">
        <input name="options[]" type="text" placeholder="Option" required/>
        <button type="button" class="remove-option-btn" onclick="removeOption(this)">Remove</button>
      </div>
      <div class="option-field">
        <input name="options[]" type="text" placeholder="Option" required/>
        <button type="button" class="remove-option-btn" onclick="removeOption(this)">Remove</button>
      </div>
    </div>
    <button type="button" id="add-option-btn">Add Option</button>

    <div>
      <label>Multiple vote allowed?: <input name="multiple" type="checkbox" /></label>
    </div>
    <button type="submit">Create</button>
  </form>

  <script>
    const addOptionBtn = document.getElementById('add-option-btn');
    const optionsContainer = document.getElementById('options-container');

    addOptionBtn.addEventListener('click', () => {
      const div = document.createElement('div');
      div.className = 'option-field';
      div.innerHTML = `
        <input name="options[]" type="text" placeholder="Option" required/>
        <button type="button" class="remove-option-btn" onclick="removeOption(this)">Remove</button>
      `;
      optionsContainer.appendChild(div);
    });

    function removeOption(button) {
      // ボタンの親要素であるoption-field divを削除
      const optionField = button.parentElement;
      optionsContainer.removeChild(optionField);
    }
  </script>
</body>
</html>
